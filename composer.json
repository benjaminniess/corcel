{
    "name": "benjaminniess/corcel",
    "replace": { "juniorgrossi/corcel": "self.version" },
    "description": "Use WordPress backend with Laravel or any PHP framework",
    "homepage": "http://github.com/benjaminnies/corcel",
    "license": "MIT",
    "authors": [
        {
            "name": "Benjamin Niess",
            "email": "bniess@web-id.fr",
            "homepage": "http://web-id.fr"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "illuminate/database": "^10.0",
        "illuminate/filesystem": "^10.0",
        "illuminate/support": "^10.0",
        "fakerphp/faker": "^1.21",
        "bordoni/phpass": "0.3.*",
        "thunderer/shortcode": "^0.7.5"
    },
    "require-dev": {
        "laravel/legacy-factories": "^1.3.2",
        "orchestra/testbench": "^8.0",
        "symfony/thanks": "^1.2.10",
        "mockery/mockery": "^1.5.1",
        "dms/phpunit-arraysubset-asserts": "^0.4"
    },
    "autoload": {
        "psr-4": {
            "Corcel\\": "src/",
            "Corcel\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Corcel\\Laravel\\CorcelServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/thanks": true
        }
    }
}
